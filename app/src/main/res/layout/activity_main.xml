<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.main.MainActivity">

    <include layout="@layout/toolbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_log_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log in" />

            <Button
                android:id="@+id/btn_log_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log out" />

            <Button
                android:id="@+id/btn_toggle_db"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Toggle DB" />

            <Button
                android:id="@+id/btn_track_two_stocks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Track Two Stocks" />

            <Button
                android:id="@+id/btn_track_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Track RecyclerView" />

            <Button
                android:id="@+id/btn_track_paged_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Map" />

            <Button
                android:id="@+id/btn_stock_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Map 2" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>